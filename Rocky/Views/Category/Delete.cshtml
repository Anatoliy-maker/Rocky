@model Rocky.Models.Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <div class="col">
                <h2 class="text-info pl-3">
                    Delete Category
                </h2>
            </div>
        </div>
        <div class="form-group row p-2 ">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row p-2 ">
            <div class="col-2">
                <label asp-for="DisplayOrder"></label>
            </div>
            <div class="col-5">
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group offset-2 row">
            <div class="col-3">
                <input type="submit" class="btn btn-danger w-100" value="Delete" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success w-100">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

 }

