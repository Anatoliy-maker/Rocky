@model Rocky.Models.ViewModels.DetailsVM

<div class="card">
    <div class="card-header">
        <div class="row justify-content-between">
            <div class="col-auto me-auto">
                <h1>@Model.Product.Name</h1>
            </div>
            <div class="col-auto">
                <h1 class="text-warning">@((Model.Product.Price).ToString("c"))</h1>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col text-center">
                <img src="@WC.ImagePath@Model.Product.Image"/>
            </div>
            <div class="col">
                <div class="row">
                    <div class="col-2 badge p-3 border text-black" style="background-color:lavenderblush">
                        @Model.Product.Category.Name
                    </div>
                    <div class="col-2 badge p-3 border text-black" style="background-color:azure">
                        @Model.Product.ApplicationType.Name
                    </div>
                </div>
                <div class="row">
                    <p class="text-secondary">@Html.Raw(Model.Product.Description) </p>
                </div>
            </div>
        </div>      
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col">
                <a asp-action="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
            </div>
            <div class="col">
                @if (Model.ExistsInCart)
                {
                    <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning btn-square form-control btn-lg" style="height:50px;">Remove from Cart</a>
                }
                else
                {
                    <button type="submit" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                }
            </div>
        </div>
    </div>
</div>

