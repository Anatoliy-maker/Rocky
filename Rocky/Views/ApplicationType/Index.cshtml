@model IEnumerable<Rocky.Models.ApplicationType>

<div class="container p-3">
    
    <div class="row justify-content-between">
        <div class="col-4">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-3">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary w-100">
                Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No application type exist.</p>
    }
</div>