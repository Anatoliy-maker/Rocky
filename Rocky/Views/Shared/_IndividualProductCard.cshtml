@model Rocky.Models.Product

<div class="col filter @Model.Category.Name.Replace(' ','_') ">
    <div class="card" style="width: 18rem;">
        <img src="@WC.ImagePath@Model.Image" class="card-img-top" alt="...">
        <div class="card-body">
            <div class="row justify-content-between">
                <div class="col-auto me-auto">
                    @Model.Name 
                </div>
                <div class="col-auto">
                    @Model.Price / sqft
                </div>
            </div>
            <h5 class="card-title">@Model.Category.Name</h5>
            <p class="card-text">@Model.ShortDesc</p>
            <div class="row">
                <div class="col">
                    <a asp-action="Details"  asp-route-id="@Model.Id"  class="btn btn-primary form-control btn-sm p-2">View Details</a>
                </div>
            </div>            
        </div>
    </div>
</div>
